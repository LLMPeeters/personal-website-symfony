<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>{% block title %}Admin{% endblock %}</title>

		{% block stylesheets %}
			{{ encore_entry_link_tags('bootstrap') }}
			{{ encore_entry_link_tags('ckeditor') }}
			{{ encore_entry_link_tags('admin') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('bootstrap') }}
			{{ encore_entry_script_tags('ckeditor') }}
			{{ encore_entry_script_tags('admin') }}
		{% endblock %}
	</head>

	<body class="flex-column d-flex justify-content-center align-items-center">
		<nav class="w-100 navbar navbar-expand-lg navbar-light bg-light">
			<div class="container-fluid">
				<a class="navbar-brand" href="{{ path('app_admin') }}">Admin</a>
				
				<button
					class="navbar-toggler"
					type="button"
					data-bs-toggle="collapse"
					data-bs-target="#navbarBurger"
					aria-controls="navbarBurger"
					aria-expanded="false"
					aria-label="Toggle navigation"
				>
					<span class="navbar-toggler-icon"></span>
				</button>
				
				<div class="collapse navbar-collapse" id="navbarBurger">
					<ul class="navbar-nav">
						<li class="nav-item"><a class="nav-link" href="{{ path('admin_simple_text_page_browse') }}">Simple Text Pages</a></li>
						<li class="nav-item"><a class="nav-link" href="{{ path('admin_simple_text_page_add') }}"><i class="fa-solid fa-plus"></i></a></li>

						<li class="nav-item"><a class="nav-link" href="{{ path('admin_complex_page_browse') }}">Complex Pages</a></li>
						<li class="nav-item"><a class="nav-link" href="{{ path('admin_complex_page_add') }}"><i class="fa-solid fa-plus"></i></a></li>

						<li class="nav-item"><a class="nav-link" href="{{ path('admin_progress_widget_browse') }}">Progress Widgets</a></li>
						<li class="nav-item"><a class="nav-link" href="{{ path('admin_progress_widget_add') }}"><i class="fa-solid fa-plus"></i></a></li>
					</ul>
				</div>
			</div>
		</nav>

		<main class="col-xxl-6 col-lg-8 col-md-10 col-sm-10 col-10">
			{% block main %}{% endblock %}
		</main>
	</body>
</html>
