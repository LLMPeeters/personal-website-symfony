{% extends 'admin/base.html.twig' %}

{% block title %}Browse pages{% endblock %}

{% block main %}
    <h1>Details</h1>

    <section>
        <p>
            <a href="{{ path('admin_complex_page_edit', {id: page.id}) }}" target="_SELF">
                <span><i class="fa-solid fa-pencil"></i> Edit</span>
            </a>
            <a href="{{ path('admin_complex_page_delete', {id: page.id}) }}" target="_SELF">
                <span><i class="fa-solid fa-trash"></i> Delete</span>
            </a>
        </p>
        <p>Title: {{ page.title }}</p>
        <p>Name: {{ page.name }}</p>
        <p>Route: {{ page.route }}</p>
    </section>
{% endblock %}
