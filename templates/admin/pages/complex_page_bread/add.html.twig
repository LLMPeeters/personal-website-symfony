{% extends 'admin/base.html.twig' %}

{% block title %}Add complex page{% endblock %}

{% block main %}
	<h1>Add a page</h1>

	{{ form_start(add_form) }}
		{{ form_row(add_form.identifier) }}
		{{ form_row(add_form.public) }}
		{{ form_row(add_form.addToNav) }}

		{% for data in add_form.data %}
			{% include 'admin/pages/complex_page_bread/formComponent.html.twig' with {'data': data} %}
		{% endfor %}

		<input class="btn btn-primary" type="submit" value="Create page">
	{{ form_end(add_form) }}
{% endblock %}
