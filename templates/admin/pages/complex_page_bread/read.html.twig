{% extends 'admin/base.html.twig' %}

{% block title %}Browse pages{% endblock %}

{% block main %}
    <h1>Details</h1>

    <section>
        <p>
            <a class="btn btn-outline-primary" href="{{ path('admin_complex_page_browse') }}" target="_SELF">
                <span><i class="fa-solid fa-list"></i> Browse</span>
            </a>
            <a class="btn btn-outline-primary" href="{{ path('admin_complex_page_edit', {id: page.id}) }}" target="_SELF">
                <span><i class="fa-solid fa-pencil"></i> Edit</span>
            </a>
            <a class="btn btn-outline-danger" href="{{ path('admin_complex_page_delete', {id: page.id}) }}" target="_SELF">
                <span><i class="fa-solid fa-trash"></i> Delete</span>
            </a>
        </p>
        <p>Title: {{ page.title }}</p>
        <p>Name: {{ page.name }}</p>
        <p>Route: <a class="btn btn-outline-secondary" href="/{{ page.route }}" target="_BLANK"><i class="fa-solid fa-up-right-from-square"></i> {{ page.route }}</a></p>
    </section>
{% endblock %}
