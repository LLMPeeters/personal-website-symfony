{% extends 'admin/base.html.twig' %}

{% block title %}Browse pages{% endblock %}

{% block main %}
	<h1>Add a page</h1>

	{{ form_start(add_form) }}
		{% for data in add_form.data %}
			<div class="accordion" id="accordion-data-{{ loop.index }}">
				<div class="accordion-item">
					<h2 class="accordion-header" id="accordion-data-heading-{{ loop.index }}">
						<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#accordion-data-collapse-{{ loop.index }}" aria-expanded="true" aria-controls="accordion-data-collapse-{{ loop.index }}">
							{{ data.vars.data.supportedLanguage.countryCode ~ ', Page in this language' }}
						</button>
					</h2>
					
					<div id="accordion-data-collapse-{{ loop.index }}" class="accordion-collapse collapse" aria-labelledby="accordion-data-heading-{{ loop.index }}" data-bs-parent="#accordion-data-{{ loop.index }}">
						<div class="accordion-body">
							{{ form_row(data.rawHtml, {'attr': {'class': 'ckeditor-classic-instance', 'required': false}}) }}
							{{ form_row(data.title) }}
							{{ form_row(data.hotlink) }}
						</div>
					</div>
				</div>
			</div>
		{% endfor %}

		{{ form_row(add_form.identifier) }}
		{{ form_row(add_form.addToNav) }}
		{{ form_row(add_form.public) }}

		<input type="submit" value="Create page">
	{{ form_end(add_form) }}
{% endblock %}
