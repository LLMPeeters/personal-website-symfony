{# var int headingStartsAtNum #}
{# var Project project #}

<article class="detail border border-2">
	<section>
		<h{{ headingStartsAtNum }}>{{ project.name }}</h{{ headingStartsAtNum }}>
		
        <p>
            <a class="btn btn-outline-primary" href="{{ path('admin_project_edit', {id: project.id}) }}" target="_SELF">
                <span><i class="fa-solid fa-pencil"></i> Edit</span>
            </a>
            <a class="btn btn-outline-primary" href="{{ path('admin_project_read', {id: project.id}) }}" target="_SELF">
				<span><i class="fa-solid fa-magnifying-glass"></i> Details</span>
            </a>
            <a class="btn btn-outline-danger" href="{{ path('admin_project_delete', {id: project.id}) }}" target="_SELF">
                <span><i class="fa-solid fa-trash"></i> Delete</span>
            </a>
        </p>
		
		<ul class="list-group">
			<li class="list-group-item">{{ project.hasCode ? 'Has code' : 'Does not have code' }}</li>
		</ul>
	</section>
	
	<section>
		<h{{ headingStartsAtNum }}>Page information</h{{ headingStartsAtNum }}>
		
		{% include 'admin/pages/complex_page_bread/readComponent.html.twig' with {'page': project.page, 'headingStartsAtNum': headingStartsAtNum + 1} %}
	</section>
	
	<section>
		<h{{ headingStartsAtNum }}>Widget information</h{{ headingStartsAtNum }}>
		
		<p>Placeholder</p>
	</section>
</article>